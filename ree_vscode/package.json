{
  "name": "ree",
  "displayName": "Ree",
  "description": "A set of tools to simplify work with ree gem",
  "version": "0.0.16",
  "publisher": "Glabix",
  "repository": {
    "type": "git",
    "url": "git@github.com:glabix/ree.git"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:ruby",
    "onCommand:ree.goToPackage",
    "onCommand:ree.goToPackageObject",
    "onCommand:ree.generatePackageSchema",
    "onCommand:ree.generatePackagesSchema",
    "onCommand:ree.generateObjectSchema",
    "onCommand:ree.generatePackage"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ree.goToPackage",
        "title": "Ree: Go To Package"
      },
      {
        "command": "ree.goToPackageObject",
        "title": "Ree: Go To Package Object"
      },
      {
        "command": "ree.goToSpec",
        "title": "Ree: Go To Spec"
      },
      {
        "command": "ree.generatePackageSchema",
        "title": "Ree: Generate Package Schema (Package.schema.json)"
      },
      {
        "command": "ree.generatePackagesSchema",
        "title": "Ree: Generate Packages Schema (Packages.schema.json)"
      },
      {
        "command": "ree.generateObjectSchema",
        "title": "Ree: Generate Object Schema for current document (object.schema.json)"
      },
      {
        "command": "ree.generatePackage",
        "title": "Ree: Generate Package"
      }
    ],
    "keybindings": [
      {
        "command": "ree.goToSpec",
        "key": "crtl+alt+r",
        "mac": "cmd+alt+r"
      },
      {
        "command": "ree.generatePackage",
        "key": "crtl+alt+n",
        "mac": "cmd+alt+n"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Ree",
      "properties": {
        "reeLanguageServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "reeLanguageServer.docker.presented": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Use Docker for ree command execution"
        },
        "reeLanguageServer.docker.containerName": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "Name of Docker container for ree command execution"
        },
        "reeLanguageServer.docker.appDirectory": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "App directory in Docker container"
        },
        "reeLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run webpack",
    "webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
    "webpack:dev": "npm run clean && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js",
    "compile": "tsc -b",
    "compile:client": "tsc -b ./client/tsconfig.json",
    "compile:server": "tsc -b ./server/tsconfig.json",
    "clean": "rm -rf client/out && rm -rf server/out",
    "watch": "tsc -b -w",
    "clean-and-watch": "npm run clean && npm run watch",
    "test-compile": "tsc -p ./",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vscode/test-electron": "^2.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "esbuild": "^0.14.39",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "merge-options": "^3.0.4",
    "mocha": "^9.2.2",
    "ts-loader": "^9.3.0",
    "typescript": "^4.6.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  }
}
